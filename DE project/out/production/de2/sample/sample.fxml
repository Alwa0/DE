                <Font name="System Bold" size="15.0" />
            </font>
        </CheckBox>
        <CheckBox fx:id="euler_err" layoutX="515.0" layoutY="100.0" mnemonicParsing="false" text="Euler's error" />
        <CheckBox fx:id="impr_err" layoutX="515.0" layoutY="150.0" mnemonicParsing="false" text="Improved Euler's error" />
        <CheckBox fx:id="runge_err" layoutX="515.0" layoutY="200.0" mnemonicParsing="false" text="Runge-Kutta's error" />
        <CheckBox fx:id="tot_err" layoutX="515.0" layoutY="250.0" mnemonicParsing="false" text="Total errors" />


        <Button fx:id="btn" layoutX="230.0" layoutY="346.0" mnemonicParsing="false" onAction="#pressButton" prefHeight="49.0" prefWidth="140.0" text="Plot a graph" textFill="#030000" />
