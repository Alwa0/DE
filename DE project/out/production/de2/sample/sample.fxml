    <children>

        <TextField fx:id="x0" layoutX="62.0" layoutY="50.0" prefHeight="26.0" prefWidth="122.0" promptText="Enter x0" />
        <TextField fx:id="y0" layoutX="62.0" layoutY="100.0" prefHeight="26.0" prefWidth="122.0" promptText="Enter y0" />
        <TextField fx:id="X" layoutX="62.0" layoutY="150.0" prefHeight="26.0" prefWidth="122.0" promptText="Enter X" />
        <TextField fx:id="N" layoutX="62.0" layoutY="200.0" prefHeight="26.0" prefWidth="122.0" promptText="Enter N" />
        <TextField fx:id="Ninit" layoutX="62.0" layoutY="250.0" prefHeight="26.0" prefWidth="122.0" promptText="Enter N init" />
        <TextField fx:id="Nfinal" layoutX="62.0" layoutY="300.0" prefHeight="26.0" prefWidth="122.0" promptText="Enter N final" />


        <CheckBox fx:id="all_mtd" layoutX="230.0" layoutY="55.0" mnemonicParsing="false" onAction="#handle_methods" text="All methods">
            <font>
                <Font name="System Bold" size="15.0" />
            </font>
        </CheckBox>
        <CheckBox fx:id="euler" layoutX="250.0" layoutY="100.0" mnemonicParsing="false" text="Euler's method" />
